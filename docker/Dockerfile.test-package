ARG CONTAINER_VERSION=invalid

FROM ${CONTAINER_VERSION} AS base

RUN apt-get update \
  && DEBIAN_FRONTEND=noninteractive apt-get install -y -q \
    wget \
    pkg-config \
    libibverbs-dev \
    libnuma-dev \
    libnvtoolsext1 \
    libvulkan1 \
    libelf-dev \
    python3 \
    python3-pip \
  && rm -rf /var/lib/apt/lists/*

RUN wget https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2204/arm64/cuda-keyring_1.1-1_all.deb \
  && dpkg -i cuda-keyring_1.1-1_all.deb

RUN pip3 install holoscan==3.3.0 cuda-python==12.9.0

ARG HOLOLINK_VERSION=invalid
ARG ARCH=invalid
COPY --from=hololink-package hololink-core_${HOLOLINK_VERSION}_${ARCH}.deb .
COPY --from=hololink-package hololink-dev_${HOLOLINK_VERSION}_${ARCH}.deb .
COPY --from=hololink-package hololink-roce_${HOLOLINK_VERSION}_${ARCH}.deb .

RUN apt-get update \
 && apt-get install -y ./hololink-core_${HOLOLINK_VERSION}_${ARCH}.deb ./hololink-dev_${HOLOLINK_VERSION}_${ARCH}.deb \
 && rm -rf /var/lib/apt/lists/*
